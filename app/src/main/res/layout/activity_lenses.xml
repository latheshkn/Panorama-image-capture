<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Lenses"
                android:textColor="#525558"
                android:typeface="sans"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/currentLense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="current:"
                android:textColor="#a8a8a8"
                android:typeface="sans"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/title"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/cancel"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/done"
                android:text="Done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="sans"
                android:textSize="14dp"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/header"
            android:background="#9199a1">
        </RelativeLayout>
        <!--**************Lenses**************-->
        <RelativeLayout
            android:id="@+id/none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp"
            android:clickable="true"
            android:tag="None">
            <ImageView
                android:id="@+id/thumbnail0"
                android:padding="3dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:visibility="invisible"/>
            <RelativeLayout
                android:id="@+id/row0"
                android:layout_alignTop="@+id/thumbnail0"
                android:layout_toRightOf="@+id/thumbnail0"
                android:layout_width="wrap_content"
                android:clickable="false"
                android:gravity="center_vertical"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/title0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Lens"
                    android:textColor="#117972"
                    android:typeface="sans"
                    android:textSize="20dp"
                    android:paddingLeft="10dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title0"
                    android:textColor="#a8a8a8"
                    android:textSize="12dp"
                    android:layout_marginTop="1dip"
                    android:text=""
                    android:paddingLeft="10dp" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sp0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/none"
            android:background="#9199a1">
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>